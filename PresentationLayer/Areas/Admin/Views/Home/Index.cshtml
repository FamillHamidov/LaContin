@using EntityLayer.Entities
@model List<Category>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 style="margin-top:10px">Kateqoriyalar</h1>
<table class="table table-bordered">
	<tr>
		<th>Ad</th>
		<th>Əməliyyatlar</th>
	</tr>
	@foreach (var item in Model)
	{
		if (item.Status == true)
		{
			<tr>
				<td>@item.Name</td>
				<td>
					<a href="/Admin/Home/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a>
					<a href="/Admin/Home/GetCategory/@item.Id" class="btn btn-success">Güncəllə</a>
				</td>
			</tr>
		}
	}
</table>
<a href="/Admin/Home/NewCategory/" class="btn btn-primary">Yeni kateqorya əlavə et</a>
