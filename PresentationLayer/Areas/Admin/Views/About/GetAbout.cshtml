@model EntityLayer.Dtos.AboutDto
@{
    ViewData["Title"] = "GetAbout";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 style="margin-top:10px">Get About</h1>
<form method="post" asp-action="UpdateAbout" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <input asp-for="PictureUrl" type="hidden" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Picture"></label>
        <input asp-for="Picture" type="file" class="form-control" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Update About</button>
    </div>
</form>
