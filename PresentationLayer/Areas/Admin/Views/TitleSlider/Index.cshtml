@using EntityLayer.Entities
@model List<TitleSlider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Images</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.ImageUrl</td>
            <td>
                <a href="/Admin/TitleSlider/RemoveImage/@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/TitleSlider/AddImage/" class="btn btn-success">Add new Image</a>

