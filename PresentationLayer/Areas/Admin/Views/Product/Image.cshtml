@model EntityLayer.Dtos.ProductDto
@{
    ViewData["Title"] = "Image";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Image</h1>
<form method="post" asp-action="UploadImage1" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden"/>
    <input asp-for="CategoryId" type="hidden"/>
    <input asp-for="Name" type="hidden"/>
    <input asp-for="OldPrice" type="hidden"/>
    <input asp-for="NewPrice" type="hidden"/>
    <input asp-for="Description" type="hidden"/>
    <div class="form-group">
        <label asp-for="Picture"></label>
        <input asp-for="Picture" type="file" class="form-control" required/>
    </div>
    <div class="form-group">
    <button class="btn btn-primary">Update Picture</button>
    </div>
</form>


