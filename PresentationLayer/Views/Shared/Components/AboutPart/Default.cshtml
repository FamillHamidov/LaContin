@using EntityLayer.Entities
@model List<About>
@{
	Layout = null;
}
<div class="about-us-area pt-100 pb-100">
	<div class="container">
		<div class="row align-items-center flex-row-reverse">
			@foreach (var item in Model)
			{
				<div class="col-lg-6">
					<div class="about-content text-center">

						<h1 data-aos="fade-up" data-aos-delay="300">@item.Title</h1>
						<p data-aos="fade-up" data-aos-delay="400">@item.Description</p>
						<div class="btn-style-3 btn-hover" data-aos="fade-up" data-aos-delay="600">
						</div>

					</div>
				</div>
				<div class="col-lg-6">
					<div class="about-img" data-aos="fade-up" data-aos-delay="400">
						<img src="@item.ImageUrl">
					</div>
				</div>
			}
		</div>
	</div>
</div>